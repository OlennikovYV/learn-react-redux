{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",

    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
